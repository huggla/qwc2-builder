#!/bin/sh
{
  startdir=`pwd`
  and=' && '
  A='cd /qwc2'
  B='cp -rf /qwc2conf/* /qwc2'
  C='yarn run themesconfig'
  UPDATE=$A$and$B$and$C
  if [ "`id -u`" -eq 0 ]
  then
    C='HOME=/home/user'
    UPDATE=$C$and$UPDATE
    chpst -u ${USER} /bin/sh -c "$UPDATE"
  else
    $UPDATE
  fi
  cd $startdir
  echo 'DONE!'
} 2>&1 | tee -a /var/log/stdout+stderr.log
exit
