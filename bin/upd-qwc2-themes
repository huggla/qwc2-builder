#!/bin/sh
{
startdir=`pwd`
chuser="chpst -u ${USER}"
configure="cp -rf /qwc2conf/* /qwc2"
update="yarn run themesconfig --cache-folder /home/user/.cache --global-folder /home/user/.config/yarn/global"
cd /qwc2
echo
if [ "`id -u`" -eq 0 ]
then
    $chuser $configure
    $chuser $update
else
    $configure
    $update
fi
cd $startdir
echo
echo 'DONE!'
} 2>&1 | tee -a /var/log/stdout+stderr.log &
exit
