#!/bin/sh
{
  startdir=`pwd`
  read QWC2_GIT_BRANCH < /QWC2_GIT_BRANCH
  read QWC2_GIT_REPOSITORY < /QWC2_GIT_REPOSITORY
  gitcommand="git clone --recursive -b ${QWC2_GIT_BRANCH} ${QWC2_GIT_REPOSITORY}"
  cd /usr/local/src
  rm -rf qwc2-demo-app
  if [ "`id -u`" -eq 0 ]
  then
    chpst -u ${USER} $gitcommand
  else
    $gitcommand
  fi
  cd $startdir
  echo 'DONE!'
} 2>&1 | tee -a /var/log/stdout+stderr.log
exit
