#!/bin/sh
{
  startdir=`pwd`
  cd /usr/local/src/qwc2-demo-app
  install="yarn install --cache-folder /home/user/.cache --global-folder /home/user/.config/yarn/global"
  configure="cp -rf /qwc2conf/* ./"
  update="yarn run prod --cache-folder /home/user/.cache --global-folder /home/user/.config/yarn/global"
  pleasewait="echo 'Please wait, copying files to /qwc2...'"
  replace1="rsync --copy-links --size-only /usr/local/src/qwc2-demo-app/ /qwc2"
  replace2="rsync --recursive --copy-links --size-only --delete /usr/local/src/qwc2-demo-app/prod/ /qwc2"
  cleanup="rm -rf /usr/local/src/qwc2-demo-app/{,.[!.],..?}*"
  chuser="chpst -u ${USER}"
  echo ''
  if [ "`id -u`" -eq 0 ]
  then
      chmod o+x /root \
   && $chuser $install \
   && $chuser $configure \
   && $chuser $update \
   && chmod o-x /root \
   && $pleasewait \
   && $chuser $replace1 \
   && $chuser $replace2 \
   && $cleanup
  else
      $install \
   && $configure \
   && $update \
   && $pleasewait \
   && $replace1 \
   && $replace2 \
   && $cleanup
  fi
  echo 'DONE!'
  cd $startdir
} 2>&1 | tee -a /var/log/stdout+stderr.log &
exit
