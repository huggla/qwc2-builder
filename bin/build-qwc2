#!/bin/sh
if [ ! -d "/usr/local/src/qwc2-demo-app" ]
then
   CLONE=1
   /usr/local/bin/clone-qwc2
   if [ ! $? -eq 0 ]
   then
      exit $?
   fi
fi
and=' && '
A='HOME=/home/user'
B='cd /usr/local/src/qwc2-demo-app'
C='yarn install'
D='cp -rf /qwc2conf/* ./'
E='yarn upgrade'
F='yarn run tsupdate'
G='yarn run prod'
H='echo "Please wait, copying files to /qwc2..."'
I='rsync --recursive --copy-links --size-only --delete /usr/local/src/qwc2-demo-app/prod/ /qwc2'
J='rsync --recursive --copy-links --ignore-existing --size-only --include "qwc2/" --exclude "*/" /usr/local/src/qwc2-demo-app/* /qwc2'
BUILD=$A$and$B$and$C$and$D$and$E$and$F$and$G$and$H$and$I$and$J
{
    if [ $CLONE ]
    then
       echo "No local source code found, building from Github source code..."
    else
       echo "Building from local source code..."
    fi
    if [ "`id -u`" -eq 0 ]
    then
        chpst -u ${USER} /bin/sh -c "$BUILD"
    else
        eval $BUILD
    fi
    EXITCODE=$?
    if [ $EXITCODE -eq 0 ]
    then
        echo "QWC2 build successfull!"
    else
        echo "QWC2 build FAILED"
    fi
    if [ $CLONE ]
    then
        echo "Removing temporary files..."
        rm -rf /usr/local/src/qwc2-demo-app
    fi
    exit $EXITCODE
} 2>&1 | tee -a /var/log/stdout+stderr.log &

