#!/bin/sh
startdir=`pwd`
export XDG_CONFIG_HOME=/home/user/.config
install="yarn install --cache-folder /home/user/.cache --global-folder /home/user/.config/yarn/global"
configure="cp -rf /qwc2conf/* ./"
update="yarn run prod"
replace="cp -rf /usr/local/src/qwc2-demo-app/* /qwc2"
chuser="chpst -u ${USER}"
cd /usr/local/src/qwc2-demo-app
if [ "`id -u`" -eq 0 ]
then
    $chuser $install
    $chuser $configure
    $chuser $update
    $chuser $replace
else
    $install
    $configure
    $update
    $replace
fi
cd $startdir
